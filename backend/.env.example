# =============================================================================
# Housarr Environment Configuration
# =============================================================================
# Copy this file to .env and configure your settings.
#
# For Docker deployments, most of these are set via docker-compose environment
# variables and don't need a .env file.
#
# REQUIRED: Generate APP_KEY before first run:
#   php artisan key:generate
# Or for Docker:
#   docker run --rm php:8.2-cli php -r "echo 'base64:' . base64_encode(random_bytes(32)) . PHP_EOL;"

# =============================================================================
# APPLICATION
# =============================================================================

APP_NAME=Housarr
APP_ENV=production
APP_DEBUG=false

# REQUIRED: Generate with php artisan key:generate
APP_KEY=

# Your application URL (include port if not 80/443)
APP_URL=http://localhost:8000

# Timezone (https://www.php.net/manual/en/timezones.php)
APP_TIMEZONE=UTC
APP_LOCALE=en

# =============================================================================
# DATABASE
# =============================================================================

# Options: sqlite, mysql, pgsql
DB_CONNECTION=sqlite

# SQLite (default - recommended for self-hosting)
# DB_DATABASE=/var/www/html/database/database.sqlite

# MySQL/MariaDB
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=housarr
# DB_USERNAME=housarr
# DB_PASSWORD=

# PostgreSQL
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=housarr
# DB_USERNAME=housarr
# DB_PASSWORD=

# =============================================================================
# CACHE, SESSION & QUEUE
# =============================================================================

# Cache: file (default), database, redis, array
CACHE_STORE=file

# Session: database (default), file, redis, cookie
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Queue: sync (default for single-container), redis, database
QUEUE_CONNECTION=sync

# =============================================================================
# REDIS (optional - only if using redis for cache/session/queue)
# =============================================================================

# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# =============================================================================
# MAIL (optional - for reminder notifications)
# =============================================================================

# Options: smtp, log, mailgun, sendgrid, ses
MAIL_MAILER=log
MAIL_FROM_ADDRESS=housarr@example.com
MAIL_FROM_NAME="${APP_NAME}"

# SMTP Settings
# MAIL_HOST=smtp.example.com
# MAIL_PORT=587
# MAIL_USERNAME=
# MAIL_PASSWORD=
# MAIL_ENCRYPTION=tls

# =============================================================================
# STORAGE (optional - for S3-compatible storage)
# =============================================================================

FILESYSTEM_DISK=local

# S3/MinIO/Cloudflare R2 (uncomment to use)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=housarr
# AWS_ENDPOINT=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# LOGGING
# =============================================================================

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=warning

# =============================================================================
# AUTHENTICATION (Laravel Sanctum)
# =============================================================================

# Comma-separated list of domains that can make authenticated requests
# Auto-configured from APP_URL + private network ranges by default
# SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1

# =============================================================================
# AI CONFIGURATION (optional - configured via Settings UI)
# =============================================================================

# AI features are configured through the web UI at /settings
# These can be set here for Docker deployments if preferred:

# AI_PROVIDER=none
# ANTHROPIC_API_KEY=
# OPENAI_API_KEY=
# GEMINI_API_KEY=
# LOCAL_BASE_URL=http://localhost:11434
# LOCAL_MODEL=llama3
