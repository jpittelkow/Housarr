# =============================================================================
# Housarr Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# IMPORTANT: Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Docker Ports (localhost only in dev)
# -----------------------------------------------------------------------------
APP_PORT=8000
VITE_PORT=5173
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Supported: sqlite, mysql, pgsql
DB_CONNECTION=sqlite

# --- SQLite (default, no additional config needed) ---
# DB_DATABASE=/var/www/html/database/database.sqlite

# --- MySQL ---
# DB_CONNECTION=mysql
# DB_HOST=mysql
# DB_PORT=3306
# DB_DATABASE=housarr
# DB_USERNAME=housarr
# DB_PASSWORD=your_secure_password

# --- PostgreSQL ---
# DB_CONNECTION=pgsql
# DB_HOST=postgres
# DB_PORT=5432
# DB_DATABASE=housarr
# DB_USERNAME=housarr
# DB_PASSWORD=your_secure_password

# -----------------------------------------------------------------------------
# Laravel Application
# -----------------------------------------------------------------------------
APP_NAME=Housarr
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000

# Generate key: php artisan key:generate --show
APP_KEY=

# -----------------------------------------------------------------------------
# File Storage
# -----------------------------------------------------------------------------
# Options: local, s3
FILESYSTEM_DISK=local

# S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# -----------------------------------------------------------------------------
# Mail Configuration
# -----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@housarr.local"
MAIL_FROM_NAME="${APP_NAME}"

# -----------------------------------------------------------------------------
# Production Overrides (uncomment for production)
# -----------------------------------------------------------------------------
# APP_ENV=production
# APP_DEBUG=false
# APP_URL=https://your-domain.com
# MAIL_MAILER=smtp
# MAIL_HOST=your-smtp-host
# MAIL_PORT=587
# MAIL_ENCRYPTION=tls
